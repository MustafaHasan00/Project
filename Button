import com.sun.org.apache.xpath.internal.operations.Minus;

import javafx.application.Application;
import javafx.geometry.Pos;
import javafx.scene.Scene;
import javafx.scene.control.*;
import javafx.scene.image.Image;
import javafx.scene.image.ImageView;
import javafx.scene.input.KeyCode;
import javafx.scene.layout.HBox;
import javafx.scene.layout.VBox;
import javafx.scene.paint.ImagePattern;
import javafx.scene.text.Font;
import javafx.scene.text.Text;
import javafx.stage.Stage;

import javafx.application.Application;
import javafx.geometry.Pos;
import javafx.scene.Scene;
import javafx.scene.text.Font;
import javafx.stage.Stage;

public class Main extends Application{
	
	
	int bought_items_price = 0;
	int q = 1;
	

	public void start(Stage MainStage) throws Exception {
		
		
		Login login = new Login(MainStage);
		
        login.start(MainStage);
        
        MainStage.setTitle("Main screen");

	}
	
	public void showMain(Stage stage) {
		  
		TextField quantity = new TextField(String.valueOf(q));
        quantity.setPrefColumnCount(1);
        
        
        Button plus = new Button("+");
          
          plus.setOnAction(e -> {
              
        	 q++;
        	  quantity.setText(String.valueOf(q));
          });
          
          Button minus = new Button("-");
          
          minus.setOnAction(e -> {
              
        	  if(q >= 2) {
        		  
        	  q--;
        	  
        	  quantity.setText(String.valueOf(q));
        	  
        	 }
        	  
        	  else if (q < 2) {
        		  
                  wrong("The quantity should be at least 1");

        	  }
          });
          
          
          Button cart = new Button("ðŸ›’");
          cart.setStyle("-fx-font-size: 16px;");

          
          HBox root = new HBox(20,plus,quantity,minus,cart);
          
          root.setAlignment(Pos.BOTTOM_RIGHT);
          root.setStyle("-fx-padding: 20;");
          Scene scene = new Scene(root , 500,400);
          
          stage.setScene(scene);

          
          
          
          
       }
	
		public void wrong(String message) {
        Alert alert = new Alert(Alert.AlertType.WARNING);
        alert.setHeaderText(null);
        alert.setContentText(message);
        alert.showAndWait();
    }
	
	public static void main(String args[]) {
		Application.launch(args);
	}
}
